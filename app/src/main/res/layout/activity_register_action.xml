<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    tools:context=".RegisterActionActivity"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="261dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-87dp"
        android:fontFamily="@font/allura"
        android:text="@string/app_tag_tours"
        android:textColor="#C1F8B0B0"
        android:textSize="63dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/RegisterGuideButton"
        android:layout_width="320dp"
        android:layout_height="79dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-75dp"
        android:background="@drawable/rounded_corners"
        android:drawableLeft="@drawable/ic_person_register"
        android:hint="Register As Tour Guide"
        android:onClick="registerGuide"
        android:textColorHint="#ffff"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RegisterGuideButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-67dp"
        android:fontFamily="@font/allura"
        android:text="___OR___"
        android:textColor="#C1F8B0B0"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/RegisterTouristButton"
        android:layout_width="318dp"
        android:layout_height="77dp"
        android:layout_alignBottom="@+id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-97dp"
        android:background="@drawable/rounded_corners"
        android:drawableLeft="@drawable/ic_person_register"
        android:hint="Register As Tourist"
        android:onClick="registerTourist"
        android:textColorHint="#FFFF"
        android:textSize="18dp" />
</RelativeLayout>